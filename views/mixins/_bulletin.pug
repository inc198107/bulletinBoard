mixin bulletin_card(autor, rating, text, id, image, name)
  - var rate = rating || 0
  .card.bulletin-card
    if image
      img.card-img-top(src= `/${image}`,alt= "image")
    else
      img.card-img-top(src="./images/default.gif", alt= "No Image")
    .card-body
      h5.card-title
        =`${name}`
      h7.card-subtitle.text-muted   
        =`${autor}`
      p.card-text
        =`${text}`
      a.card-link.link-with-rating(href = '#', data-id=`${id}`, data-autor=`${autor}`)
        =`Read more...`
        .rating-container
          .top-rating
            = 'Top rating:'
          - var count = 0
          .star-inactive-block
            while count < rate
              - count ++
              img.star(src="./images/star.svg", alt="star") 
      
