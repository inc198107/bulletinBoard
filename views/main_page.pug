extends layout.pug
block content
  aside.left-bar
    .left-bar__filter#fixed_filters
      .left-bar__filter-title
        p
          ='Categories'
      .list-group.list-group-flush
        each category in categories
          a.list-group-item.list-group-item-action(href=`/${category}`.replace(" ","-").toLowerCase())
            =`${category}`
  section.result
    include ./mixins/_bulletin
    each item in results
      +bulletin_card(item.authorMail, item.rating, item.preview, item.id, item.image, item.name, item.findId)
    